<h1>About This Restaurant</h1>

<p><%= @restaurant.name %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<p>
  <% @restaurant.reviews.each do |review| %>
  <%= review.content %>
  <%= review.rating %> stars
  <% end %>
</p>
<p><%= link_to 'Back to List', restaurants_path %></p>
<p><%= link_to 'Review this restaurant', new_restaurant_review_path(@restaurant) %></p>
